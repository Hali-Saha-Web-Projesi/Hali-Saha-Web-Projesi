@using HaliSaha_Model.Models
@model SporTesisi
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer


@{
    ViewData["Title"] = _localizer["Spor Tesisi Ekle"];
    ViewData["Title9"] = _localizer["Spor Tesisi Resmi"];
    ViewData["Title10"] = _localizer["Halisaha ID"];
    ViewData["Title2"] = _localizer["Halısaha Adı"];
    ViewData["Title3"] = _localizer["Adresi"];
    ViewData["Title6"] = _localizer["Ekle"];
    ViewData["Title8"] = _localizer["Halısahalara Geri Dön"];
}
<h5>@ViewData["Title"]</h5>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TesisCreate">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@ViewData["Title9"]</label>
                <input type="url" asp-for="TesisResmi" class="form-control" />
                <span asp-validation-for="TesisResmi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @ViewData["Title10"] </label>
                <input asp-for="TesisId" class="form-control" />
                <span asp-validation-for="TesisId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @ViewData["Title2"]</label>
                <input asp-for="TesisAdi" class="form-control" />
                <span asp-validation-for="TesisAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@ViewData["Title3"]</label>
                <input asp-for="TesisAdresi" class="form-control" />
                <span asp-validation-for="TesisAdresi" class="text-danger"></span>
            </div>
            <div class="form-group">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TesisIndex">@ViewData["Title8"]</a>
</div>
