@using HaliSaha_Model.Models
@model SporTesisi
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer


@{
    ViewData["Title"] = _localizer["Spor Tesisinin Detaylarını Gör"];
    ViewData["Title2"] = _localizer["Halısaha Adı"];
    ViewData["Title3"] = _localizer["Adresi"];
    ViewData["Title6"] = _localizer["Düzenle"];
    ViewData["Title7"] = _localizer["Randevu Al"];
    ViewData["Title8"] = _localizer["Halısahalara Geri Dön"];
}
<h5>@ViewData["Title"]</h5>

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.TesisResmi)" />
        </dd>
        <dt class="col-sm-2">
            @ViewData["Title2"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TesisAdi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["Title3"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TesisAdresi)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="TesisEdit" asp-route-id="@Model.TesisId">@ViewData["Title6"] |</a>

    <a asp-action="TesisCreate" asp-route-id="@Model.TesisId">@ViewData["Title7"] |</a>
    <a asp-action="TesisIndex">@ViewData["Title8"]</a>

</div>
