@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = _localizer["Spor Tesisleri"];
    ViewData["Title2"] = _localizer["Spor Tesisi Adı"];
    ViewData["Title3"] = _localizer["Adresi"];
    ViewData["Title5"] = _localizer["Tesis Ekle"];
    ViewData["Title6"] = _localizer["Düzenle"];
    ViewData["Title7"] = _localizer["Sil"];
    ViewData["Title8"] = _localizer["Detaylar"];
}
@model IEnumerable<HaliSaha_Model.Models.SporTesisi>
<h5>@ViewData["Title"]</h5>

<p>
    <a asp-controller="Admin" asp-action="TesisCreate">@ViewData["Title5"]</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @ViewData["Title2"]
            </th>
            <th>
                @ViewData["Title3"]
            </th>
            <th>
                @ViewData["Title4"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.TesisResmi)" id="admin" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TesisAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TesisAdresi)
                </td>
                <td>
                    <a asp-action="TesisEdit" asp-route-id="@item.TesisId"> @ViewData["Title6"]  |</a>
                    <a asp-action="TesisDelete" asp-route-id="@item.TesisId">@ViewData["Title7"] |</a>
                    <a asp-action="TesisDetails" asp-route-id="@item.TesisId">@ViewData["Title8"]</a> |
                </td>
            </tr>
        }
    </tbody>
</table>