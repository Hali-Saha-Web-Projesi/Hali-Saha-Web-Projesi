@model HaliSaha_Model.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<h5>Randevu Al</h5>

<h4> </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Müşteri Adı</label>
                <select asp-for="KullaniciId" class="form-control">
                    <option>@ViewBag.userId</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Güzellik Merkezi Adı</label>
                <select asp-for="TesisId" class="form-control" asp-items="ViewBag.merkezId"></select>
            </div>
            <div class="form-group">
                <label asp-for="randevuTarihi" class="control-label"></label>
                <input asp-for="randevuTarihi" class="form-control" />
                <span asp-validation-for="randevuTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Randevularımı Gör</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}