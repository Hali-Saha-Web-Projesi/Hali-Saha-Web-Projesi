@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@model HaliSaha_Model.Models.Randevu
@{
    ViewData["Title"] = _localizer["Randevu Al"];
    ViewData["Title2"] = _localizer["Spor Tesisi Adı"];
    ViewData["Title3"] = _localizer["Randevu Tarihi"];
    ViewData["Title6"] = _localizer["Ekle"];
    ViewData["Title8"] = _localizer["Randevularıma Geri Dön"];
}

<h5>@ViewData["Title"]</h5>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="kullanici_Id" class="control-label"> @ViewBag.userId</label>
           
            </div>
            <div class="form-group">
                <label class="control-label"> @ViewData["Title2"]</label>
                <input asp-for="TesisAdi" class="form-control" />
                <span asp-validation-for="@Model.TesisAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@ViewData["Title3"]</label>
                <input asp-for="randevuSaati" class="form-control" />
                <span asp-validation-for="@Model.randevuSaati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["Title6"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@ViewData["Title8"]</a>
</div>

