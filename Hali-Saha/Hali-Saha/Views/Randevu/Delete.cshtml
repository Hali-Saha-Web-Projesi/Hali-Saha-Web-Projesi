@model Hali_Saha.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<h2>Randevu Sil</h2>

<h5>Randevunuzu silmek istediğinizden emin misiniz?</h5>
<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Müşteri Adı Soyadı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kullanici.KullaniciAd) @Html.DisplayFor(model => model.kullanici.KullaniciSoyad)
        </dd>
        <dt class="col-sm-2">
            Güzellik Merkezi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sporTesisi.TesisAdi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sporTesisi.TesisDegerlendirmesi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sporTesisi.TesisDegerlendirmesi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sporTesisi.TesisPuani)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sporTesisi.TesisPuani)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.randevuTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.randevuTarihi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="KullaniciId" />
        <input type="hidden" asp-for="TesisId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Randevularımı Gör</a>
    </form>
</div>
