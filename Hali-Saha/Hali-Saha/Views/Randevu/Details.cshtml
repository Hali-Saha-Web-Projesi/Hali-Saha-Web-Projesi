@model HaliSaha_Model.Models.Randevu

@{
    ViewData["Title"] = "Randevu Detayları";
}

<h5>Randevu Detayları</h5>

<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Müşteri Adı Soyadı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kullanici.KullaniciAd) @Html.DisplayFor(model => model.kullanici.KullaniciSoyad)
        </dd>
        <dt class="col-sm-2">
            Güzellik Merkezi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sporTesisi.TesisAdi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sporTesisi.TesisDegerlendirmesi)
        </dt>
        @if (DateTime.Now.Date < ViewBag.gunu)
        {
            <dd class="col-sm-10">
                Gerçekleşmedi
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.sporTesisi.TesisDegerlendirmesi)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sporTesisi.TesisPuani)
        </dt>
        @if (DateTime.Now.Date < ViewBag.gunu)
        {
            <dd class="col-sm-10">
                Gerçekleşmedi
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.sporTesisi.TesisPuani)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.randevuTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.randevuTarihi)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Düzenle", "Edit", new { merkezId = Model.TesisId, uyeId = Model.KullaniciId }) |
    <a asp-action="Index">Randevularımı Gör</a>
</div>
