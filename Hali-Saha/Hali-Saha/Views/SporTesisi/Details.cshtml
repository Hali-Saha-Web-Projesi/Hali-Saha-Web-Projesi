@using HaliSaha_Model.Models
@model SporTesisi
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{

    ViewData["Title1"] = _localizer["Spor Tesisi Adı"];
    ViewData["Title2"] = _localizer["Adresi"];
    ViewData["Title"] = _localizer["Spor Tesisi Detayları"];
    ViewData["Title4"] = _localizer["Spor Tesisi"];

}
<h5>@ViewData["Title"]</h5>

<div>
    <h4>@ViewData["Title4"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.TesisResmi)" />
        </dd>
        <dt class="col-sm-2">
            @ViewData["Title1"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TesisAdi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["Title3"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TesisAdresi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["Title4"]
        </dt>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin")) //randevu oluşturma felan yapmış bizde onlar yok
    {
        <a asp-controller="Admin" asp-action="TesisEdit" asp-route-id="@Model.TesisId">Düzenle |</a>
        <a asp-controller="Admin" asp-action="TesisIndex">Spor Tesislerine Geri Dön</a>
    }
    else
    {
        <a asp-controller="SporTesisi" asp-action="Index">Spor Tesislerine Geri Dön</a>
    }
</div>