@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title2"] = _localizer["Yeni Merkez Ekle"];
    ViewData["Title3"] = _localizer["Detaylar"];
    ViewData["Title4"] = _localizer["Güzellik Merkezleri"];
}
@model IEnumerable<HaliSaha_Model.Models.SporTesisi>

    @{
    ViewData["Title"] = "Güzellik Merkezleri";
    }

    <h5>@ViewData["Title4"]</h5>
    <br />

    @if (User.IsInRole("Admin"))
{
    <p>
        <a asp-controller="Admin" asp-action="MerkezCreate">@ViewData["Title2"]</a>
    </p>
}
    <div class="card-columns">
        @foreach (var item in Model)
    {
        <div class="card" style="background-color: aliceblue">
            <div class="card-img">
                <div class="hover-overlay-container">
                    <img id="resim" src="@Html.DisplayFor(modelItem => item.TesisResmi)" />
                    <div class="overlay-btn-container">
                        <a class="overlay-btn" asp-action="Details" asp-route-id="@item.TesisId">@ViewData["Title3"]</a>
                    </div>
                </div>
            </div>
            <div class="card-body" style="text-align: center;">
                @if (User.IsInRole("Müsteri"))
                {
                <a asp-action="Details" asp-route-id="@item.TesisId" id="link"><h5 class="card-title">@Html.DisplayFor(modelItem => item.TesisAdi)</h5></a>
                }
                else
                {
                <a id="link" class="linki" asp-controller="Admin" asp-action="MerkezDetails" asp-route-id="@item.TesisId"><h5 class="card-title">@Html.DisplayFor(modelItem => item.TesisAdi)</h5></a>
                }
            </div>
        </div>
    }
    </div>
